<!-- make sure you are running this with the phpunit of your zend server and not your system phpunit! -->
<phpunit bootstrap="bootstrap.php">
    <php>
        <var name="jcr.url" value="http://localhost:8080/server" />
        <var name="jcr.user" value="admin" />
        <var name="jcr.pass" value="admin" />
        <var name="jcr.workspace" value="tests" />
        <var name="jcr.transport" value="davex" />
    </php>
    
    <testsuites>
      <testsuite name="phpCR Access Control">
        <directory>.</directory>
        <file>suite/tests/read/AccessControlTest.php</file>
      </testsuite>
      <testsuite name="phpCR Access">
          <directory>.</directory>
          <file>suite/tests/read/AccessTest.php</file>
      </testsuite>
      <testsuite name="phpCR Export">
          <directory>.</directory>
          <file>suite/tests/read/ExportTest.php</file>
      </testsuite>
      <testsuite name="phpCR Lock">
          <directory>.</directory>
          <file>suite/tests/read/LockTest.php</file>
      </testsuite>
      <testsuite name="phpCR Namespaces">
          <directory>.</directory>
          <file>suite/tests/read/NamespacesTest.php</file>
      </testsuite>
      <testsuite name="phpCR Node Types">
          <directory>.</directory>
          <file>suite/tests/read/NodeTypesTest.php</file>
      </testsuite>
      <testsuite name="phpCR Query Object Model">
          <directory>.</directory>
          <file>suite/tests/read/QueryObjectModelTest.php</file>
      </testsuite>
      <testsuite name="phpCR Read">
          <directory>.</directory>
          <file>suite/tests/read/ReadTest.php</file>
      </testsuite>
      <testsuite name="phpCR Search">
          <directory>.</directory>
          <file>suite/tests/read/SearchTest.php</file>
      </testsuite>
      <testsuite name="phpCR System Node">
          <directory>.</directory>
          <file>suite/tests/read/SystemNodeTest.php</file>
      </testsuite>
      <testsuite name="phpCR XMLMappings">
          <directory>.</directory>
          <file>suite/tests/read/XMLMappingsTest.php</file>
      </testsuite>
    </testsuites>

</phpunit>
